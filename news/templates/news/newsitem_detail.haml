- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url news:list %}'}
				{% trans "News" %}
		%li
			%a{'href': '{% url news:detail object.id%}'}
				= object.caption

- block caption
	= object.caption

- block content
	%time{'datetime': '{{ news_item.published_at }}', 'pubdate': 'pubdate'}
		= news_item.published_at
	.full_text
		= object.full_text|safe
