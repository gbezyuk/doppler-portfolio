- extends 'base.haml'
- load i18n

- block caption
	{% trans "Flatpages" %}

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url flatpages %}'}
				{% trans "Flatpages" %}

- block content
	%ul.unstyled.flatpages
		- for flatpage in flatpages
			%li
				%a{'href': '{{ flatpage.get_absolute_url }}'}
					= flatpage.title

- block flatpages_link_class
	active