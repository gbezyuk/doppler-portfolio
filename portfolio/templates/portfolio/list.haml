- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url portfolio_work_list %}'}
				{% trans "Portfolio" %}

- block caption
	{% trans "Portfolio" %}

- block content
	%ul.works.unstyled
		- for work in works
			%li
				%a{'href': '{{ work.get_absolute_url }}'}
					= work

- block portfolio_link_class
	active