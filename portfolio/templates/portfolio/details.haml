- extends 'base.haml'
- load i18n

- block breadcrumbs
	%ul.breadcrumb
		%li
			- include 'home_link.haml'
		%li
			%a{'href': '{% url portfolio:work_list %}'}
				{% trans "Portfolio" %}
		%li
			%a{'href': '{% url portfolio:work_details work.pk %}'}
				= work.title

- block caption
	= work.title

- block content
	= work.description|safe

- block portfolio_link_class
	active